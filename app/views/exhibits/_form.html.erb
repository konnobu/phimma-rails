<%= form_for @exhibit do |f| %>
<div class="col-md-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
        商品の画像を登録
      </h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%=f.label :image,"商品画像" %>
        <%= f.file_field :image %>
        <%# f.hidden_field :image_cache %>
      </div>
    </div>
  </div>
</div>
<div class="col-md-8">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
        商品の情報を入力
      </h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label "商品名" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "商品説明" %>
        <%= f.text_area :exhibit_description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "出品カテゴリー" %>
        <%= f.collection_select :exhibit_category_id, ExhibitCategory.all, :id, :category_name , { include_blank: "カテゴリを選択してください" },  { class: "form-control" } %>
      </div>
      <div class="form-group">
        <%= f.label "商品状態" %>
        <%= f.collection_select :book_status_id, BookStatus.all, :id, :status_title , { include_blank: "本の状態を選択してください" },  { class: "form-control" } %>
      </div>
      <div class="form-group">
        <%= f.label "出品価格" %>
        <%= f.number_field :price, class: "form-control" %>
      </div>
    </div>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :exhibit_status_id, value: 1 %>
  <%= button_tag :type => "submit", :class =>"btn btn-default primary-pink btn-lg btn-block" do %>
    <span class="glyphicon glyphicon-upload"></span> 出品する
  <% end %>
</div>
<% end %>