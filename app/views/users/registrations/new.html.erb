<div class="container user-new-container ">
  <div class="row">
    <div class="col-sm-12">
      <section class="exhibit-single-container">
        <div class="exhibit-single-container-title">
          <h1>新規会員登録</h1>
        </div>
        <div class="exhibit-single-container-main">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="exhibit-single-container-main-child">
            <div class="form-group">
              <%= f.label '大学メールアドレス　' %><span class="label label-danger exhibit-danger-label">必須</span><br>
              <%= f.email_field :email, autofocus: true, class: "form-control input-lg", :placeholder => "メールアドレス（必須／大学のドメインである必要があります）" %>
            </div>
            <div class="form-group">
              <%= f.label 'パスワード　' %><span class="label label-danger exhibit-danger-label">必須</span><br>
              <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上)
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: 'form-control  input-lg' %>
            </div>
            <div class="form-group">
              <%= f.label 'パスワード（確認）　' %><span class="label label-danger exhibit-danger-label">必須</span><br>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control  input-lg' %>
            </div>
            <div class="form-group">
              <%= f.label 'お名前　' %><span class="label label-danger exhibit-danger-label">必須</span><br>
              <%= f.text_field :name, class: 'form-control  input-lg' %>
            </div>
            <div class="form-group">
              <%= f.label :avatar, "プロフィール画像（画像URL）" %>
              <%= f.file_field :avatar ,  class: 'form-control input-lg'%>
            </div>
          </div>

          <div class="exhibit-single-container-main-child exhibit-submit">
            <%= f.submit "登録する", class: 'btn btn-default submit-btn center-block sign-up-btn' %>
            <%= link_to 'ログインはこちら', new_user_session_path, class: 'link-to-login' %>
          </div>

          <% end %>
        </div>
      </section>
    </div>
  </div>
</div>