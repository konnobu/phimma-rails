<div class="container user-new-container ">
  <div class="row">
    <div class="col-sm-12">
      <section class="exhibit-single-container">
        <div class="exhibit-single-container-title">
        <h1>ログイン</h1>
        </div>
        <div class="exhibit-single-container-main">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="exhibit-single-container-main-child">
            <div class="form-group">
              <%= f.label '大学メールアドレス　' %><br>
              <%= f.email_field :email, autofocus: true, class: "form-control input-lg", :placeholder => "メールアドレス" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", class: 'form-control  input-lg' %>
            </div>
            <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label 'パスワードを記憶する' %>
            </div>
            <% end -%>
          </div>

          <div class="exhibit-single-container-main-child exhibit-submit">
            <%= f.submit "ログインする", class: 'btn btn-default submit-btn center-block sign-up-btn' %>
            <%= link_to '登録はこちら', new_user_registration_path, class: 'link-to-login' %>
          </div>

          <% end %>
        </div>
      </section>
    </div>
  </div>
</div>

